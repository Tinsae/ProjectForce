<aura:component controller="TableApexController">
    <aura:attribute name="tableHeight" type="String" default="300" />
    <aura:attribute name="tableWidth" type="String" default="650" />
    <aura:attribute name="selectedBatchIds" type="List" />
    <aura:attribute name="color" type="String" default="C307C3" />

    <aura:handler name="tableItemSelected" event="c:TableItemSelectedEvent" action="{!c.handleItemSelectedEvent}" />
    <aura:handler name="saveInlineEdits" event="c:saveInlineEditsEvent" action="{!c.handleSaveInlineEditsEvent}" />
    <aura:registerEvent name="batchInfoEvent" type="c:BatchInformationEvent" />
    <!-- <div class="b">
        <lightning:input type="color" label="Color" name="color" value="{!v.color}" />
        <ui:outputText value="{!v.color}" />
    </div> -->
    

    <div class="a">
        <c:CreateDataTable aura:id="batch"
            width="{!v.tableWidth}" 
            height="{!v.tableHeight}"
            queryObject="Training__c" 
            tableHeader="Batch Table"
            queryFields="[['Name','text', true], ['Color__c', 'text', true], ['ProjectStartDate__c', 'date', true], ['Trainer__r.Name', false], ['Project__r.Name', false]]" />
            <!-- query field is a list of lists each inner list consists of [row, type, editable] if type is false dont display that column-->
        <c:CreateDataTable aura:id="project"
            width="{!v.tableWidth}" 
            height="{!v.tableHeight}"
            queryObject="Project__c" 
            tableHeader="Project Table" 
            queryFields="[['Name','text', true], ['(SELECT Id FROM Trainings__r)', false]]" />
    </div>
</aura:component>	
