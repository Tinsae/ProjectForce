                </aura:iteration>
            </lightning:select> -->
    
            <!--</lightning:card>-->
                <footer class="slds-modal__footer slds-modal__footer_directional">
                    <div class="slds-button-group" role="group">
                            <lightning:button class="slds-button slds-button_neutral kanban" label="Kanban" value="Cancel" onclick="{!c.hideModal}"/>
                        <lightning:button class="slds-button slds-button_neutral cancel" label="Cancel" value="Cancel" onclick="{!c.hideModal}"/>
                        <lightning:button class="slds-button slds-button_neutral save" label="Save" value="Save" onclick="{!c.save}"/>
                    </div>
                </footer>
            </div>
        </div>
        </section>
    
    <div aura:id = "backdrop"></div>

    
</aura:component>